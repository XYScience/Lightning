<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="@dimen/activity_horizontal_margin">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingRight="-15dp"
        app:contentPaddingBottom="-15dp"
        app:contentPaddingLeft="4dp"
        app:shapeAppearanceOverlay="@style/cutCornerStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:background="@drawable/item_card_bg">

            <TextView
                android:id="@+id/tv_carrier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="China Unicom"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_status_green_bg"
                android:text="使用中"
                android:textColor="@color/item_background_green_text"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_iccid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_carrier_name"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="iccid: 66666666666"
                android:textColor="@color/subtext_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_net_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_iccid"
                android:layout_marginTop="10dp"
                android:text="网络类型: HSPA"
                android:textColor="@color/subtext_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_phone_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_net_type"
                android:layout_marginTop="10dp"
                android:text="电话类型: LTE"
                android:textColor="@color/subtext_color"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_phone_type"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mcc: 460"
                    android:textColor="@color/subtext_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_mnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="mnc: 01"
                    android:textColor="@color/subtext_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
